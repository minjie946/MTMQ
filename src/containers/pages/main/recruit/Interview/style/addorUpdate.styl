.interview-content {
  padding 22px 10px;
}

.cus-tabs-container {
  > .ant-tabs-card {
    .ant-tabs-content {
      margin-top: -16px;
      > .ant-tabs-tabpane {
        background: #fff;
        padding: 16px;
      }
    }
    .ant-tabs-bar {
      border-color: #fff;
      // height:34px;
      // background: transparent;
      background:rgba(249,249,249,1);
      .ant-tabs-tab {
        text-align center;
        border-color: transparent;
        // background: transparent;
        width:104px;
        // height:34px;
        // line-height 34px;
        background:rgba(249,249,249,1);
        border-radius:0px 3px 0px 0px;
      }
      .ant-tabs-tab-active {
        // border-color: #fff;
        // background: #fff;
        width:104px;
        height:43px;
        line-height 43px;
        background:rgba(241,241,241,1);
        border-radius:3px 3px 0px 0px;
        vertical-align bottom;
      }
    }
  }
  > .ant-tabs-card .ant-tabs-content > .ant-tabs-tabpane {
    padding 0px;
  }
}

.cus-recriut-orgianztion-post {
  border-bottom 1px solid #F7F7F7;
  span {
    display inline-block;
    vertical-align middle;
    text-align center;
    height:48px;
    line-height 48px;
    background:rgba(247,247,247,0.2);
    box-shadow:0px 1px 0px 0px rgba(217,217,217,0.3);
    font-size:11px;
    font-family:PingFangSC-Regular;
    font-weight:400;
    padding 0 16px;
    color:rgba(102,102,102,1);
  }
  span:nth-child(1) {
    // width 80%;
    width 100%
    text-align center;
  }
  span:nth-child(2) {
    width 18%;
    margin-left 3px;
    color:rgba(255,74,20,1);
    cursor pointer;
  }
}

.cus-interview-btn {
  button {
    padding 6px 10px;
    margin-top 13px;
    margin-right 13px;
  }
}
.cus-interview-textarea {
  textarea {
    background:rgba(245,245,245,1);
    border none
    outline none
  }
  textarea:focus {
    border none;
    outline: none;
  }
}
.cus-interview-add {
  cursor pointer;
  width 130px;
  height 67px;
  background:rgba(245,245,245,1);
  padding-top 8px;
  text-align center;
  font-size:11px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(192,192,192,1);
  line-height:16px;
  p {
    margin-top 3px;
  }
}

.question-container {
  position relative
  .cus-interview-icon {
    position absolute
    right -22px
    top 0
    width:20px;
    height:20px;
    text-align center
    background:rgba(255,255,255,1);
    border-radius:4px;
    border:1px solid rgba(217,217,217,1);
    color  #FF4A14
  }
}
