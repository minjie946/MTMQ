.row-bootom {
  margin-bottom 20px;
}
.salary-title {
  font-size:16px;
  font-family:PingFangSC;
  font-weight:600;
  color:rgba(51,51,51,1);
  margin-bottom 10px;
}
.salary-content {
  width 160px;
  border 1px solid #EDEFEF;
  border-radius 4px;
  cursor pointer;
  padding 4px 8px;
  box-shadow 0px 0px 20px rgba(237, 239, 239, 1);
  background-color rgba(255, 255,255, 0.4)
  min-height 60px;
  display inline-block;
  vertical-align middle
  margin-right 10px;
  .span-font {
    display inline-block;
    vertical-align middle
    font-size:16px;
    font-family:PingFangSC;
    font-weight:600;
    color:rgba(51,51,51,1);
    line-height 60px
  }
  .span-money {
    display inline-block;
    vertical-align middle
    font-size: 24px;
    font-weight: bold;
    color:rgba(51,51,51,1);
    color:rgba(0,122,255,1);
    line-height 60px
    margin-left 4px;
  }
}