* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
 html, body {
  width: 100%;
  height: 100%;
  font-family: "PingFang SC","Microsoft YaHei","微软雅黑","inherit","Arial";
}
body {
  -webkit-overflow-scrolling: touch;
}
p {
  margin: 0;
}
#app {
  height: 100%;
  box-sizing: border-box;
}

/* @module scrollbar(滚动条) start */
::-webkit-scrollbar-track-piece {
  background-color:#f8f8f8;
}
::-webkit-scrollbar {
  width:6px;
  height:6px;
  display: none;
}
::-webkit-scrollbar-thumb {
  background-color:#dddddd;
  background-clip:padding-box;
  min-height:28px;
  border-radius: 5px;
}
::-webkit-scrollbar-thumb:hover {
  background-color:rgb(167, 164, 164);
}
/* @module scrollbar(滚动条) end */
