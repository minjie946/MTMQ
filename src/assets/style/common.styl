* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
 html, body {
  width: 100%;
  height: 100%;
  font-family: "PingFang SC","Microsoft YaHei","微软雅黑","inherit","Arial";
}
body {
  -webkit-overflow-scrolling: touch;
}
p {
  margin: 0;
}
#app {
  height: 100%;
  box-sizing: border-box;
}

/* @module scrollbar(滚动条) start */
::-webkit-scrollbar-track-piece {
  background-color:#f8f8f8;
}
::-webkit-scrollbar {
  width:6px;
  height:6px;
  display: none;
}
::-webkit-scrollbar-thumb {
  background-color:#dddddd;
  background-clip:padding-box;
  min-height:28px;
  border-radius: 5px;
}
::-webkit-scrollbar-thumb:hover {
  background-color:rgb(167, 164, 164);
}
/* @module scrollbar(滚动条) end */

/* 一期基础信息部分公共样式 start */

/* table 表格样式 start */
.ant-table-body::-webkit-scrollbar {
  display: block;
  height: 10px;
}
.ant-table-body::-webkit-scrollbar-thumb {
  border-radius: 0;
}
.ant-table-fixed-left,
.ant-table-fixed-right {
  bottom: 10px;
}
/* table 表格样式 end */

.error_border {
  input {
    border-color: #F5222D!important;
  }
}
.table_button_wrapper {
  padding-top: 10px;
  padding-bottom: 20px;
}
.table_button_item {
  height 32px
  line-height 32px
}
.table_button_item + .table_button_item {
  margin-left: 10px;
}

/* 一期基础信息部分公共样式 end */

/* @module page-content (界面的缩放) start */
.custom-page-btn {
  margin-left: 10px;
}

/* @module page-content (界面的缩放) end */

/* @module input 框 宽度 start */
.cus-input
  width 100% !important
.cus-input-80
  width 80px !important
.cus-input-105
  width 105px !important
.cus-input-157
  width 157px !important
.cus-input-180
  width 180px !important
.cus-input-197
  width 197px !important
.cus-input-220
  width 220px !important
.cus-input-300
  width 300px !important
.cus-input-394
  width 394px !important
.cus-input-375
  width 375px !important
.cus-input-426
  width 426px !important

.cus-from-item {
  width 100%;
}

/* @module input 框 宽度 end */

/* @module 按钮的处理 start */
.btn-inline-group {
  span, button {
    margin-left 13px
  }
  span:nth-child(1), button:nth-child(1) {
    margin-left 0
  }
}
.search-btn {
  margin 19px 0 24px;
}
.model-btn {
  width 64px
}
.span-link span{
  font-size:11px;
  color:rgba(0,122,255,1);
  cursor pointer
}

/* @module 按钮的处理 end */

/* @module model 提示框 start */
.model-error {
  padding: 15px 0
  > p {
    text-align center
  }
}
.ant-modal-header {
  padding 14px 24px
}

.cus-modal-btn-top {
  margin-top 27px;
  button {
    padding 3px 12px;
  }
}

.cus-modal-btn-group {
  text-align center
  width 100%
}

/* @module model 提示框 end */

/* @module select 下拉框 start */

.cus-select-autowidth
  .ant-select-dropdown[style]
    min-width 200px
    width auto !important

.cus-select-autowidth-240
  .ant-select-dropdown[style]
    min-width 240px
    width auto !important
/* @module select 下拉框 end */

/* 主界面的padding start */

.cus-home-content {
  padding 24px;
}
.cus-home-card-content {
  padding 0 24px 24px 24px;
}

/* 主界面的padding end */


/* 主界面的 table status start */
.cus-lable-success,
.cus-lable-error,
.cus-lable-waring,
.cus-lable-gray,
.cus-span-gray,
.cus-lable-info {
  font-size:11px;
  font-family:PingFangSC-Regular;
  font-weight:400;
  line-height:20px;
  cursor pointer;
}
.cus-lable-success {
  color:rgba(120,195,38,1) !important;
}
.cus-lable-error {
  color:rgba(255,74,20,1) !important;
}
.cus-lable-waring {
  color:rgba(255,157,0,1) !important;
}
.cus-lable-info {
  color:rgba(0,122,255,1) !important;
}
.cus-span-gray,
.cus-lable-gray {
  color:rgba(153, 153, 153, 0.3) !important;
}
.cus-span-gray {
  cursor not-allowed !important;
}

/* 主界面的 table status end */

.cus-item {
  display inline-block
  vertical-align middle
}

/** 选项卡 */
.card-container {
  >.ant-tabs-card .ant-tabs-card-bar .ant-tabs-tab {
    border none !important;
  }
  > .ant-tabs-card {
    .ant-tabs-content {
      margin-top: -16px;
      > .ant-tabs-tabpane {
        background: #fff;
        padding: 16px;
      }
    }
    .ant-tabs-bar {
      border-color: #fff;
      background #EDEFEF
      .ant-tabs-tab {
        border-color: transparent;
        background: transparent;
        vertical-align bottom;
      }
      .ant-tabs-tab-active {
        border-color: #fff;
        background: #fff;
      }
    }
  }
}
